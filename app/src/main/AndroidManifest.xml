<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".views.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".views.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".views.activities.CategoryProductsActivity"
            android:theme="@style/Theme.MyApplication"/>
        <activity
            android:name=".views.activities.ProfileDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".views.activities.EditProfileFieldActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".views.activities.ShippingAddressActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".views.activities.AddAddressActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity android:name=".views.activities.OrderStatusActivity" />
        <activity android:name=".views.activities.AdminActivity" />
        <activity 
            android:name=".views.activities.CategoryFormActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".views.activities.AddProductActivity"
            android:exported="false"
            android:label="Thêm sản phẩm"
            android:parentActivityName=".views.activities.MainActivity" />
        <activity
            android:name=".views.activities.AdminOrderActivity"
            android:exported="false"
            android:label="Quản lý đơn hàng"
            android:theme="@style/Theme.MyApplication" />
    </application>

</manifest>